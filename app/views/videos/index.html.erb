

<%= javascript_include_tag "https://cdn.jsdelivr.net/npm/algoliasearch@4.5.1/dist/algoliasearch-lite.umd.js",integrity:true, crossorigin: "anonymous" %>
<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/instantsearch.css@7.3.1/themes/reset-min.css", integrity: true, crossorigin: "anonymous" %>
<div class="carousel" data-flickity='{ "wrapAround": true }'>
  <div class="ais-InstantSearch">
    <h1>Course Videos</h1>

    <div id="searchbox"></div>
    <div id="hits"></div>


  </div>
  <% @videos.each do |video| %>
    <div class="carousel-cell col-lg-4 col-md-6 d-flex align-items-stretch">
      <article class="video-card">

          <%=video_tag(video.url + "#t=5.0", preload:"metadata",class:"video",controls:"controls") %>
        <div class="video-title">
          <h5><%= video.name %></h5>
        </div>
        <div class="author-details trainer d-flex justify-content-between align-items-center">
          <% trainer = Trainer.find_by(id: video.trainer_id) %>
          <div class="profile-image">

            <%= image_tag(trainer.imageUrl,class:"img-fluid") %>
          </div>
          <div class="profile-description ">
            <p><%= trainer.name %></p>
            <p><%= trainer.tagline %></p>
          </div>
          <div class="watch">
            <button class="watch-btn">
              <h3><%= link_to("Watch", video.url) %></h3>
            </button>
          </div>

        </div>

      </article>

    </div>
  <% end %>


</div>


