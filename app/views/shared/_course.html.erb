<div class="col-lg-4 col-md-6 d-flex align-items-stretch">
  <% @courses.each do |course|%>
    <div class="course-item">
      <%=image_tag(course.imageUrl, class:"img-fluid") %>
      <div class="course-content">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h4><%= course.category %></h4>
          <p class="price">$<%=course.price %></p>
        </div>
        <% course_id = Course.find_by(title: course.title, category: course.category) %>

        <h3><%= link_to course.title, course_path(Course.find_by(id: course_id))%></h3>
        <p><%= course.description %></p>
        <div class="trainer d-flex justify-content-between align-items-center">
          <div class="trainer-profile d-flex align-items-center">
            <img src="https://storage.googleapis.com/funzatube/images/trainers/trainer-1.jpg" class="img-fluid" alt="">
            <% trainer_id = course.trainer_id %>

            <span><%=Trainer.find_by(id:trainer_id).name  %></span>
          </div>
          <div class="trainer-rank d-flex align-items-center">
            <%= fa_icon "users" %>50
            &nbsp;&nbsp;
            &nbsp;<%= fa_icon "heart" %>65
          </div>
        </div>
      </div>
    </div>
  <% end %>




</div>